{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:80"
            ],
            "django": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/src"
        }
    ]
}
